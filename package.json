{
  "name": "@tijaniabdellatif/decorapi-express",
  "version": "0.0.1-development",
  "description": "Modern TypeScript decorators for Express.js applications",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "express",
    "decorators",
    "typescript",
    "dependency-injection",
    "framework",
    "api"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "bun run clean && tsc",
    "test:report": "bun test --reporter=spec",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'test/**/*.ts' --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "check": "bun run lint && bun run format:check",
    "fix": "bun run lint:fix && bun run format",
    "prepublishOnly": "bun run build",
    "semantic-release": "semantic-release"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tijaniabdellatif/decorAPI-express.git"
  },
  "types": "dist/index.d.ts",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "author": "Tijani Abdellatif",
  "license": "MIT",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^11.0.2",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/bun": "latest",
    "bun-types": "^1.2.13",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3",
    "semantic-release": "^24.2.3",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.32.1"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "dotenv": "^16.5.0"
  }
}